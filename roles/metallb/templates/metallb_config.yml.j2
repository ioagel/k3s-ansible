---
# Metallb address pool
apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: cluster-ip-pool
  namespace: "{{ metallb_namespace }}"
spec:
  addresses:
  - "{{ metallb_ip_range }}"

---
# L2 configuration
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: cluster-ip-announce
  namespace: "{{ metallb_namespace }}"
spec:
  ipAddressPools:
  - cluster-ip-pool
