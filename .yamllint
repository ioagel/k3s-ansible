---
ignore: |
  .venv/
  vagrant/

extends: default

yaml-files:
  - "*.yaml"
  - "*.yml"
  - "*.yml.j2"
  - "*.yaml.j2"
  - ".yamllint"

rules:
  line-length:
    max: 120
    level: warning
  truthy:
    allowed-values: ["true", "false", "yes", "no", "on"]
  comments:
    min-spaces-from-content: 1
